<section class="site-block block-timeline001">
  <div class="timeline-wrapper">
    <section class="timeline-content">

      {% for item in block.items %}
        <div class="timeline-row" data-init-onScrollAnim >
          <div class="timeline-row-img" data-aos="fade-right" data-aos-easing="linear" data-aos-duration="1000" data-aos-delay="0" ></div>

          <div class="timeline-row-dot">
            <div class="beacon-container">
              <div class="beacon"></div>
            </div>
          </div>

          <div class="timeline-row-content" data-aos="fade-left" data-aos-easing="linear" data-aos-duration="1000" data-aos-delay="350">
            <h3 class="timeline-title">{{ item.heading }}</h3>
            <div class="timeline-desc">{{item.text|nl2br}}</div>
          </div>
        </div>
      {% endfor %}

    </section>
  </div>
</section>
