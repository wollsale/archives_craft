{# @var craft \craft\web\twig\variables\CraftVariable #}
{% set pageClass = 'homepage' %}
{% extends "_layouts/_layout.twig" %}

{% block _inline_css %}
  <style>
    {{ source ("index_critical.min.css", ignore_missing = true) }}
  </style>
{% endblock %}

{% block content %}

  {# Hero #}
  {% cache globally using key 'home-hero' %}
    <section class="hero-home">
      <div class="main-carousel" data-flickity='{ "wrapAround": true, "pageDots": false, "prevNextButtons": false }' >
        {% for item in entry.homeSlider.all() %}
          <div class="carousel-cell">
            <div class="carousel-cell-content">
              <div class="separator-content-wrapper">
                <h2 class="carousel-cell-title is-separator">{{ item.heading }}</h2>
                <p class="carousel-cell-text">{{ item.text }}</p>
                <a href="{{ item.button.url }}" class="site-btn is-outlined">{{ item.button.text }}</a>
              </div>
            </div>
            <img class="main" src="/img/site/ph1-hero.jpg" alt="TFI">
            {# <img class="hero-pattern" src="/img/site/hero-pattern.png" alt="TFI"> #}
          </div>
        {% endfor %}
      </div>
    </section>
  {% endcache %}

{% endblock %}

{% block _inline_js %}
{% endblock %}
